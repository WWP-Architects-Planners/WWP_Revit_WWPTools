<Window x:Class="WWPTools.WpfUI.Views.SelectItemsWithFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Items"
        Width="980"
        Height="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        FontFamily="Arial Narrow"
        FontSize="14"
        Background="White">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="PromptText"
                   TextWrapping="Wrap"
                   Margin="0,0,0,8" />

        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="Filter Parameter:" />
            <ComboBox x:Name="FilterParamCombo"
                      Grid.Column="1"
                      MinWidth="220"
                      Margin="8,0,0,0" />

            <TextBlock Grid.Column="3"
                       VerticalAlignment="Center"
                       Text="Value:" />
            <ComboBox x:Name="FilterValueCombo"
                      Grid.Column="4"
                      MinWidth="220"
                      Margin="8,0,0,0" />

            <Button x:Name="ApplyFilterButton"
                    Grid.Column="6"
                    Content="Set Sheet Filter"
                    MinWidth="140"
                    Margin="8,0,0,0" />
            <Button x:Name="ClearFilterButton"
                    Grid.Column="7"
                    Content="Clear"
                    MinWidth="80"
                    Margin="8,0,0,0" />
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="260" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="Search:" />
            <TextBox x:Name="SearchBox"
                     Grid.Column="1"
                     MinWidth="240"
                     Margin="8,0,0,0" />

            <Button x:Name="SelectAllButton"
                    Grid.Column="3"
                    Content="Select All"
                    MinWidth="100"
                    Margin="8,0,0,0" />
            <Button x:Name="SelectNoneButton"
                    Grid.Column="4"
                    Content="None"
                    MinWidth="80"
                    Margin="8,0,0,0" />
            <Button x:Name="InvertSelectionButton"
                    Grid.Column="5"
                    Content="Invert"
                    MinWidth="80"
                    Margin="8,0,0,0" />

            <TextBlock x:Name="CountLabel"
                       Grid.Column="6"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Text="0 selected"
                       Margin="8,0,0,0" />
        </Grid>

        <ListBox x:Name="ItemsList"
                 Grid.Row="3"
                 SelectionMode="Extended"
                 Margin="0,0,0,8"
                 MinHeight="200" />

        <DockPanel Grid.Row="4">
            <Image x:Name="LogoImage"
                   DockPanel.Dock="Left"
                   Width="56"
                   Height="56"
                   Margin="0,0,0,0"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   IsHitTestVisible="False" />
            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,12,0,0">
                <Button x:Name="OkButton"
                        Content="OK"
                        MinWidth="100"
                        Margin="0,0,8,0"
                        IsDefault="True" />
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        MinWidth="100"
                        IsCancel="True" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
