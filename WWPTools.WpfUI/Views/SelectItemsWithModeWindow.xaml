<Window x:Class="WWPTools.WpfUI.Views.SelectItemsWithModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Items"
        Width="720"
        Height="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        FontFamily="Arial Narrow"
        FontSize="14"
        Background="White">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="PromptText"
                   TextWrapping="Wrap"
                   Margin="0,0,0,8" />

        <ListBox x:Name="ItemsList"
                 Grid.Row="1"
                 SelectionMode="Extended"
                 Margin="0,0,0,8"
                 MinHeight="200" />

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="0,8,0,8">
            <RadioButton x:Name="ModeA"
                         Margin="0,0,16,0" />
            <RadioButton x:Name="ModeB" />
        </StackPanel>

        <DockPanel Grid.Row="3">
            <Image x:Name="LogoImage"
                   DockPanel.Dock="Left"
                   Width="56"
                   Height="56"
                   Margin="0,0,0,0"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   IsHitTestVisible="False" />
            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,12,0,0">
                <Button x:Name="OkButton"
                        Content="Export"
                        MinWidth="80"
                        Margin="0,0,8,0"
                        IsDefault="True" />
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        MinWidth="80"
                        IsCancel="True" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
