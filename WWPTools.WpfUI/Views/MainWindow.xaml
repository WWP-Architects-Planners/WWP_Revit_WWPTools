<Window x:Class="WWPTools.WpfUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WWPTools" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F4F2">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF1F2933" CornerRadius="12" Padding="16">
            <DockPanel LastChildFill="True">
                <Viewbox Width="56" Height="56" Margin="0,0,16,0">
                    <Canvas Width="64" Height="64">
                        <Path Fill="#FFF9FAFB" Data="M32,4 L60,20 L60,44 L32,60 L4,44 L4,20 Z" />
                        <Path Fill="#FF10B981" Data="M32,12 L52,23 L52,41 L32,52 L12,41 L12,23 Z" />
                    </Canvas>
                </Viewbox>
                <StackPanel>
                    <TextBlock Text="WWPTools" FontSize="22" FontWeight="SemiBold" Foreground="#FFF9FAFB" />
                    <TextBlock Text="Suite Plan Tools" FontSize="12" Foreground="#FFD1D5DB" />
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#FFFFFFFF" CornerRadius="12" Padding="20" BorderBrush="#FFE5E7EB" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Project Info" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12" />
                    <TextBlock Text="Project Name" />
                    <TextBox Height="30" Margin="0,4,0,12" />
                    <TextBlock Text="Client" />
                    <TextBox Height="30" Margin="0,4,0,12" />
                    <TextBlock Text="Suite Count" />
                    <TextBox Height="30" Margin="0,4,0,12" />
                    <TextBlock Text="Template" />
                    <ComboBox Height="30" Margin="0,4,0,0">
                        <ComboBoxItem Content="Default" />
                        <ComboBoxItem Content="Marketing" />
                        <ComboBoxItem Content="Leasing" />
                    </ComboBox>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Margin="16,0,0,0" Background="#FFFFFFFF" CornerRadius="12" Padding="20" BorderBrush="#FFE5E7EB" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Options" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12" />
                    <CheckBox Content="Create Key Plan" Margin="0,0,0,8" />
                    <CheckBox Content="Create Suite Views" Margin="0,0,0,8" />
                    <CheckBox Content="Apply View Template" Margin="0,0,0,8" />
                    <CheckBox Content="Place on Sheets" Margin="0,0,0,8" />
                    <CheckBox Content="Generate Marketing Exports" />
                </StackPanel>
            </Border>
        </Grid>

        <DockPanel Grid.Row="2">
            <TextBlock DockPanel.Dock="Left" Text="Ready" Foreground="#FF6B7280" VerticalAlignment="Center" />
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button Content="Cancel" Width="90" Margin="0,0,8,0" />
                <Button Content="Run" Width="120" Background="#FF1F2933" Foreground="#FFF9FAFB" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
