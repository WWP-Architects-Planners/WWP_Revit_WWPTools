<Window x:Class="WWPTools.WpfUI.Views.ExportSchedulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Schedules"
        Width="860"
        Height="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        FontFamily="Arial Narrow"
        FontSize="14"
        Background="White">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="PromptText"
                   TextWrapping="Wrap"
                   Margin="0,0,0,8" />

        <ListBox x:Name="ItemsList"
                 Grid.Row="1"
                 SelectionMode="Extended"
                 Margin="0,0,0,8"
                 MinHeight="200" />

        <StackPanel x:Name="ModePanel"
                    Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="0,8,0,8">
            <CheckBox x:Name="ModeExcel"
                      Margin="0,0,16,0" />
            <CheckBox x:Name="ModeCsv" />
        </StackPanel>

        <Grid x:Name="ExcelPanel"
              Grid.Row="3"
              Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Excel File"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0" />
            <TextBox x:Name="ExcelPathBox"
                     Grid.Column="1"
                     Margin="0,0,8,0" />
            <Button x:Name="BrowseExcelButton"
                    Grid.Column="2"
                    Content="Browse"
                    MinWidth="90" />
        </Grid>

        <Grid x:Name="CsvOptionsPanel"
              Grid.Row="4"
              Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="CSV Delimiter"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0" />
            <ComboBox x:Name="DelimiterCombo"
                      Grid.Column="1"
                      MinWidth="220"
                      Margin="0,0,8,0">
                <ComboBoxItem Content="Comma (,)" Tag="," />
                <ComboBoxItem Content="Semicolon (;)" Tag=";" />
                <ComboBoxItem Content="Tab (\t)" Tag="&#x9;" />
            </ComboBox>
            <CheckBox x:Name="QuoteAllCheck"
                      Grid.Column="2"
                      Content="Quote All"
                      VerticalAlignment="Center" />
        </Grid>

        <Grid x:Name="CsvFolderPanel"
              Grid.Row="5"
              Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="CSV Folder"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0" />
            <TextBox x:Name="CsvFolderBox"
                     Grid.Column="1"
                     Margin="0,0,8,0" />
            <Button x:Name="BrowseCsvButton"
                    Grid.Column="2"
                    Content="Browse"
                    MinWidth="90" />
        </Grid>

        <DockPanel Grid.Row="6">
            <Image x:Name="LogoImage"
                   DockPanel.Dock="Left"
                   Width="56"
                   Height="56"
                   Margin="0,0,0,0"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   IsHitTestVisible="False" />
            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,12,0,0">
                <Button x:Name="OkButton"
                        Content="OK"
                        MinWidth="90"
                        Margin="0,0,8,0"
                        IsDefault="True" />
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        MinWidth="90"
                        IsCancel="True" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
