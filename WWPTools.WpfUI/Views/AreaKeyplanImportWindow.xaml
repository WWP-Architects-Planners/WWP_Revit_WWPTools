<Window x:Class="WWPTools.WpfUI.Views.AreaKeyplanImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Area Key Schedule"
        Width="980"
        Height="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        FontFamily="Arial Narrow"
        FontSize="14"
        Background="White">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="Excel File:" />
            <TextBox x:Name="FilePathBox"
                     Grid.Column="1"
                     Margin="8,0,0,0"
                     MinWidth="420"
                     IsReadOnly="True" />
            <Button x:Name="BrowseButton"
                    Grid.Column="2"
                    Content="Browse"
                    MinWidth="110"
                    Margin="8,0,0,0" />
            <Button x:Name="LoadButton"
                    Grid.Column="3"
                    Content="Load"
                    MinWidth="110"
                    Margin="8,0,0,0" />
        </Grid>

        <TextBlock Grid.Row="1"
                   Text="Map Excel columns to Area parameters"
                   FontWeight="SemiBold"
                   Margin="0,0,0,6" />

        <DataGrid x:Name="MappingGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  CanUserSortColumns="False"
                  HeadersVisibility="Column"
                  Margin="0,0,0,8"
                  MinHeight="200">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Excel Column"
                                    Binding="{Binding ColumnName}"
                                    IsReadOnly="True"
                                    Width="2*" />
                <DataGridComboBoxColumn Header="Map To"
                                        ItemsSource="{Binding DataContext.ParameterOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                                        SelectedItemBinding="{Binding SelectedOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="3*" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="3" Margin="0,0,0,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       Text="Preview (first rows)"
                       FontWeight="SemiBold"
                       Margin="0,0,0,6" />
            <TextBox x:Name="PreviewBox"
                     Grid.Row="1"
                     IsReadOnly="True"
                     TextWrapping="NoWrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     MinHeight="120" />
        </Grid>

        <DockPanel Grid.Row="4">
            <Image x:Name="LogoImage"
                   DockPanel.Dock="Left"
                   Width="56"
                   Height="56"
                   Margin="0,0,0,0"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   IsHitTestVisible="False" />
            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,12,0,0">
                <Button x:Name="OkButton"
                        Content="OK"
                        MinWidth="100"
                        Margin="0,0,8,0"
                        IsDefault="True" />
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        MinWidth="100"
                        IsCancel="True" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
